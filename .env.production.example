# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Database Configuration (use your VPS PostgreSQL)
DATABASE_URL=postgres://username:password@your-vps-ip:5432/medusa-db

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=generate-a-secure-random-string-here
COOKIE_SECRET=generate-another-secure-random-string-here

# CORS Configuration (update with your actual domains)
STORE_CORS=https://your-storefront-domain.com
ADMIN_CORS=https://your-admin-domain.com
AUTH_CORS=https://your-admin-domain.com

# Backend URL (your VPS domain)
MEDUSA_BACKEND_URL=https://your-backend-domain.com

# Redis (optional)
REDIS_URL=redis://your-vps-ip:6379

# Node Environment
NODE_ENV=production

# Admin credentials (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecret
